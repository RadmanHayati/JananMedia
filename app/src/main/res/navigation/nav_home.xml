<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/navigation_home"
  app:startDestination="@+id/home">

  <fragment
    android:id="@+id/home"
    android:name="com.radmanhayati.jananmedia.ui.home.HomeFragment"
    android:label="@string/title_home"
    tools:layout="@layout/fragment_home">

    <action
        android:id="@+id/action_first_screen"
        app:destination="@id/first_screen"/>

  </fragment>

  <fragment
      android:id="@+id/first_screen"
      android:name="com.radmanhayati.jananmedia.ui.title.TitleFragment"
      android:label="@string/title_home"
      tools:layout="@layout/fragment_title">

    <argument
      android:name="title"
      android:defaultValue="Home Screen 1"
      app:argType="string" />

  </fragment>

</navigation>