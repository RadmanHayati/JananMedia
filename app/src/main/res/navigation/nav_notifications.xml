<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_notifications"
    app:startDestination="@+id/notifications">

    <fragment
        android:id="@+id/notifications"
        android:name="com.radmanhayati.jananmedia.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">

        <action
            android:id="@+id/action_first_screen"
            app:destination="@id/first_screen"/>

    </fragment>

    <fragment
        android:id="@+id/first_screen"
        android:name="com.radmanhayati.jananmedia.ui.title.TitleFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_title">

        <argument
            android:name="title"
            android:defaultValue="Notifications Screen 1"
            app:argType="string" />

    </fragment>

</navigation>